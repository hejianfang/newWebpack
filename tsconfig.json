{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "build", "dist", "scripts", "webpack", "jest"],
  "include": ["src", "type.d.ts", ".eslintrc.js"]
}
